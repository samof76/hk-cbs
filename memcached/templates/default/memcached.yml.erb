defaults: &defaults
  ttl: 86400
  readonly: false
  urlencode: false
  c_threshold: 10000
  compression: true
  debug: false
  sessions: false
  session_servers: false
  fragments: true
  memory: 256
  benchmarking: true
  raise_errors: true
  fast_hash: false
  fastest_hash: false
  <% if @namespace%>
  namespace: <%= @namespace%>
  <%end%>
  servers:
  <% @hostnames.each do |hostname| %>
    <%= "- #{hostname}:11211 "%>
  <%end%>
staging:
  <<: *defaults
 
slave:
  <<: *defaults